/* pages/admin/tableCode/tableCode.wxss */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 头部栏 */
.header-bar {
  margin-bottom: 20rpx;
}

.add-btn {
  padding: 30rpx;
  background: linear-gradient(135deg, #38b2ac 0%, #319795 100%);
  color: white;
  border-radius: 20rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 30rpx rgba(56, 178, 172, 0.3);
}

/* 桌码列表 */
.table-code-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.table-code-item {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.item-content {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.code-info {
  flex: 1;
}

.code-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.code-time {
  font-size: 24rpx;
  color: #999;
}

.item-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  padding: 12rpx 30rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  text-align: center;
}

.action-btn.preview {
  background: linear-gradient(135deg, #38b2ac 0%, #319795 100%);
  color: white;
  border: none;
}

.action-btn.download {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

.action-btn.delete {
  background: rgba(245, 108, 108, 0.1);
  color: #f56c6c;
  border: 1rpx solid #f56c6c;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-dialog {
  width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-title {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-content {
  padding: 20rpx 30rpx 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  border-top: 2rpx solid #e5e5e5;
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.modal-btn.cancel {
  color: #999;
  border-right: 2rpx solid #e5e5e5;
}

.modal-btn.confirm {
  color: #38b2ac;
  font-weight: bold;
}

