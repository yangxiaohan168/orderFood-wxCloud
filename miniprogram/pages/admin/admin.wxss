/* pages/admin/admin.wxss */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 30rpx 60rpx;
  color: white;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 菜单区域 */
.menu-section {
  margin: 30rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  padding: 30rpx 0;
}

.section-title {
  padding: 0 30rpx 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.menu-grid {
  padding: 0 10rpx;
}

/* 菜单项图标大小 */
.menu-grid .van-grid-item__icon {
  font-size: 56rpx !important;
  height: 56rpx !important;
}

/* 菜单项文字大小 */
.menu-grid .van-grid-item__text {
  font-size: 32rpx !important;
  font-weight: 500;
  margin-top: 15rpx;
  color: #333;
}

/* 返回按钮 */
.back-btn {
  margin: 30rpx;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  text-align: center;
  font-size: 32rpx;
  color: #666;
}

/* 密码输入弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-dialog {
  width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-title {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-content {
  padding: 20rpx 30rpx 40rpx;
}

.password-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.password-input:last-child {
  margin-bottom: 0;
}

.modal-footer {
  display: flex;
  border-top: 2rpx solid #e5e5e5;
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.modal-btn.cancel {
  color: #999;
  border-right: 2rpx solid #e5e5e5;
}

.modal-btn.confirm {
  color: #667eea;
  font-weight: bold;
}

