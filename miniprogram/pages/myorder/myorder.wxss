/* pages/myorder/myorder.wxss */
.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* 标签栏 */
.tabs {
  background: white;
  display: flex;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  position: relative;
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
}

.tab-text {
  font-size: 30rpx;
  color: #666;
  transition: all 0.3s;
}

.tab-item.active .tab-text {
  color: #e54d42;
  font-weight: bold;
}

.tab-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #e54d42;
  border-radius: 3rpx;
}

/* 订单列表 */
.order-list {
  flex: 1;
  padding: 20rpx;
}

.order-item {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #f5f5f5;
}

.user-info-text {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.user-phone {
  font-size: 24rpx;
  color: #999;
}

.order-type {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.order-status {
  font-size: 26rpx;
  color: #e54d42;
  padding: 6rpx 20rpx;
  background: rgba(229, 77, 66, 0.1);
  border-radius: 20rpx;
}

.order-status.cancel {
  color: #999;
  background: #f5f5f5;
}

/* 订单内容 */
.order-content {
  padding: 30rpx;
}

/* 充值订单信息 */
.recharge-info {
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.recharge-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.recharge-item:last-child {
  margin-bottom: 0;
}

.recharge-label {
  font-size: 28rpx;
  color: #666;
}

.recharge-value {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.recharge-value.gift {
  color: #ff6b6b;
}

.recharge-value.total {
  color: #e54d42;
  font-size: 36rpx;
}

/* 点餐订单商品列表 */
.goods-list {
  margin-bottom: 20rpx;
}

.goods-item {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.goods-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.goods-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

/* 商品标签 */
.goods-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 10rpx;
}

.tag-text {
  font-size: 22rpx;
  color: #e54d42;
  background: rgba(229, 77, 66, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(229, 77, 66, 0.3);
}

.goods-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  font-size: 28rpx;
  color: #e54d42;
  font-weight: bold;
}

.goods-count {
  font-size: 26rpx;
  color: #999;
}

/* 免单标识 */
.miandan-tag {
  background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
  color: white;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  text-align: center;
  margin-top: 10rpx;
}

/* 订单底部 */
.order-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
  text-align: right;
}

.order-info {
  text-align: right;
  margin-bottom: 15rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.order-table-code {
  font-size: 24rpx;
  color: #38b2ac;
  font-weight: 500;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.order-price {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 26rpx;
  color: #666;
}

.price-num {
  font-size: 36rpx;
  color: #e54d42;
  font-weight: bold;
  margin-left: 10rpx;
}

.action-btns {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  padding: 12rpx 30rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  text-align: center;
}

.action-btn.detail {
  background: #f5f5f5;
  color: #666;
}

.action-btn.cancel {
  background: rgba(229, 77, 66, 0.1);
  color: #e54d42;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 150rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
