/* pages/myhome/myhome.wxss */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户头部 */
.user-header {
  background: #e54d42;
  padding: 80rpx 30rpx 100rpx;
  min-height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 未登录状态提示文字 */
.login-prompt-text {
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

/* 内联登录按钮 */
.login-btn-inline {
  background: white;
  color: #e54d42;
  padding: 16rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 20rpx;
  line-height: 1;
  display: inline-block;
}

.login-btn-inline::after {
  border: none;
}

/* 用户主区域（上下布局） */
.user-main {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.user-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  background: white;
  border: 6rpx solid rgba(255,255,255,0.3);
  margin-bottom: 40rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-detail {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.user-name {
  font-size: 44rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.user-phone {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  text-align: center;
}

.member-tag {
  font-size: 36rpx;
  margin-left: 15rpx;
}

/* 余额卡片 */
.balance-card {
  margin: -80rpx 30rpx 20rpx;
  padding: 40rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.1);
  display: flex;
  gap: 40rpx;
  height: 300rpx;
}

.balance-item {
  flex: 1;
  display: flex;
  align-items: center;
}

.balance-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
}

.balance-content {
  flex: 1;
}

.balance-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.balance-amount {
  font-size: 36rpx;
  color: #e54d42;
  font-weight: bold;
}

/* 充值按钮 */
.action-card {
  margin: 0 30rpx 20rpx;
}

.action-btn-large {
  background: linear-gradient(135deg, #e54d42 0%, #f37370 100%);
  color: white;
  padding: 30rpx;
  border-radius: 20rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 30rpx rgba(229, 77, 66, 0.3);
}

/* 订单统计 */
.order-stats {
  margin: 0 30rpx 20rpx;
  padding: 40rpx 30rpx;
  background: white;
  border-radius: 20rpx;
}

.stats-list {
  display: flex;
  justify-content: space-around;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.stats-icon {
  font-size: 40rpx;
}

.stats-count {
  font-size: 40rpx;
  color: #e54d42;
  font-weight: bold;
}

.stats-label {
  font-size: 26rpx;
  color: #666;
}

/* 功能菜单 */
.menu-section {
  margin: 0 30rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.service-btn {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  background: none;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.service-btn::after {
  border: none;
}

.service-icon {
  font-size: 50rpx;
  margin-bottom: 10rpx;
}

.service-text {
  font-size: 26rpx;
  color: #333;
}

/* 管理员入口触发区域 */
.admin-trigger {
  position: fixed;
  right: 0;
  bottom: 0;
  width: 200rpx;
  height: 200rpx;
  z-index: 10;
  /* background: rgba(0,0,0,0.1); */ /* 调试时可以显示 */
}

/* 密码输入弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-dialog {
  width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-title {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-content {
  padding: 20rpx 30rpx 40rpx;
}

.password-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.password-hint {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #f37370;
  text-align: center;
}

.modal-footer {
  display: flex;
  border-top: 2rpx solid #e5e5e5;
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.modal-btn.cancel {
  color: #999;
  border-right: 2rpx solid #e5e5e5;
}

.modal-btn.confirm {
  color: #e54d42;
  font-weight: bold;
}

/* 版本号信息 */
.version-info {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  padding: 40rpx 0;
  background: #f5f5f5;
}

.version-text {
  font-size: 24rpx;
  color: #999;
}
